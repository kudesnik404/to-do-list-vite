# Top-most EditorConfig file
root = true

[*]
# Set default charset
charset = utf-8

# Unix-style newlines with a newline ending
end_of_line = lf
insert_final_newline = true

# 2 space indentation
indent_style = space
indent_size = 2

max_line_length = 120

trim_trailing_whitespace = true

[*.svg]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
